                } else if (enableSettingsUpdate) {
                    alert('è«‹è‡³å°‘è¼¸å…¥ä¸€å€‹æœ‰æ•ˆçš„é…ç½®é …ï¼ˆéµå’Œå€¼ï¼‰');
                    return;
