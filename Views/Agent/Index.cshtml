        }

        // æäº¤è§¸ç™¼ä»»å‹™
        function submitTriggerTask() {
            const form = document.getElementById('triggerForm');
            const formData = new FormData(form);
            
            const taskData = {
                taskType: formData.get('taskType') || 'analyze',
                projectPath: formData.get('projectPath') || null,
