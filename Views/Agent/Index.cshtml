        // åˆ‡æ›é…ç½®æ›´æ–°å€å¡Šé¡¯ç¤º
        function toggleSettingsUpdate() {
            const checkbox = document.getElementById('enableSettingsUpdate');
            const section = document.getElementById('settingsUpdateSection');
