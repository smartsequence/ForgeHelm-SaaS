            };

            // æ”¶é›†é…ç½®æ›´æ–°åƒæ•¸
            const enableSettingsUpdate = document.getElementById('enableSettingsUpdate').checked;
            if (enableSettingsUpdate) {
                const settingsUpdates = {};
                const settingsItems = document.querySelectorAll('.settings-item');
                let hasValidSettings = false;

                settingsItems.forEach(item => {
                    const key = item.querySelector('.settings-key').value.trim();
                    const value = item.querySelector('.settings-value').value.trim();
                    
