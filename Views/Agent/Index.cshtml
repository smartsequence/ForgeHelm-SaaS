                        <div class="agent-meta">
                            <p><strong>é€£æ¥æ™‚é–“:</strong> ${new Date(agent.connectedAt).toLocaleString()}</p>
                            ${agent.currentTaskId ? `<p><strong>ç•¶å‰ä»»å‹™:</strong> ${agent.currentTaskId}</p>` : ''}
